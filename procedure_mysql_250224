CREATE DEFINER=`root`@`localhost` PROCEDURE `EJEMPLO1`()
BEGIN
    DECLARE VAR_NOMBRE_CIUDAD VARCHAR(200);
    SET VAR_NOMBRE_CIUDAD = 'A CORUÃ‘A';
    SELECT VAR_NOMBRE_CIUDAD;
END;
---
CREATE DEFINER=`root`@`localhost` FUNCTION `PRIMERA_LETRA`(TEXTO VARCHAR(100)) RETURNS varchar(100) CHARSET utf8mb4
    DETERMINISTIC
BEGIN
  DECLARE RESPUESTA VARCHAR(100);
  SET RESPUESTA = LEFT(TEXTO,1);
  RETURN RESPUESTA;
END
---
SELECT NAME, PRIMERA_LETRA(Name)
FROM CITY
WHERE PRIMERA_LETRA(Name)='A';
---
